@model biblioteca.Models.Autores

@{
    ViewData["Title"] = "Eliminar Autor";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Eliminar Autor</h4>
                </div>
                <div class="card-body">
                    <p class="text-warning">¿Está seguro que desea eliminar este autor?</p>
                    <dl class="row">
                        <dt class="col-sm-3">Nombre:</dt>
                        <dd class="col-sm-9">@Model.Nombre</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="AutorID" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">Eliminar</button>

                            <a class="btn btn-secondary" asp-action="Index">Volver a lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

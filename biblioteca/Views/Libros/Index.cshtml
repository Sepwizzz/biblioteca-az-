@model IEnumerable<biblioteca.Models.Libros>

@{
    ViewData["Title"] = "Biblioteca";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">📚 Biblioteca</h1>
        <a class="btn btn-primary" asp-action="Create">Agregar nuevo libro</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Título</th>
                    <th>Autor</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Titulo</td>
                        <td>@(item.Autor != null ? item.Autor.Nombre : "Sin autor")</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-warning me-1" asp-action="Edit" asp-route-id="@item.ID">Editar</a>
                            <a class="btn btn-sm btn-info me-1 text-white" asp-action="Details" asp-route-id="@item.ID">Detalles</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ID">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center">
            No hay libros registrados.
        </div>
    }
</div>
